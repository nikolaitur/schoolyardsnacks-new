{% case page.handle %}
  {% when 'refer-a-friend' %}
    {% assign page_container_width_class = 'container--slim' %}
  {% else %}
    {% assign page_container_width_class = 'container' %}
{% endcase %}

<main class="content" role="main">
  <div class="container">
    <div class="page-header">
      <h1>{{ page.title }}</h1>
    </div>
  </div>
  <div class="{{ page_container_width_class }} page page--no-sidebar">
    <div class="page__content">
      {% if page.content.size > 0 %}
        <div class="rte">
          {{ page.content }}
        </div>
      {% endif %}
    </div>
  </div>
  {% section 'product-cta' %}

</main>