                        sell_price: "{{desc_prices[1]}}",
                        compare_at_price: "{{desc_prices[2]}}",
                        variants: [
                        {% for variant in product.variants %}
                        {id: {{variant.id}}, flavor: "{{ variant.title | handleize }}"},
                        {% endfor %}
                    ]},
                {% endfor %}        
