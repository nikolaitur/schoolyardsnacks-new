<main class="content content--no-sidebar">
  <div class="container--slim">
    <section class="page-main">
      <header class="page-header">
        <h1>{{ page.title }}</h1>
      </header>
      <div class="page-content">
        <p class="lead">Create your password to activate your account</p>
        {% form 'activate_customer_password' %}
          {{ form.errors | default_errors }}
          <div class="form__fieldrow" id="password">
            <label class="large" for="password">Password</label><br>
            <input type="password" value="" name="customer[password]" id="customer_password" size="30" />
          </div>
          <div class="form__fieldrow" id="password_confirm">
            <label class="large" for="password_confirmation">Password Confirmation</label><br>
            <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" size="30" />
          </div>
          <div class="form__actions">
            <input class="btn" type="submit" value="Activate Account" />
            <span class="note">or</span>
            <input type="submit" class="btn" name="decline" id="customer_decline" value="Decline Invitation" />
          </div>
        {% endform %}
      </div>
    </section>
  </div>
</main>

