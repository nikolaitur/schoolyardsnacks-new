<div class="section section--reviews">
  <div class="container--slim">
    <div class="section__header">
      <h2 class="h1 center">Picky eaters say...</h2>
    </div>
    <div class="section__content">
      {% assign backup = product %}
      {% if product.handle contains 'cereal' %}
        {% assign product = all_products.cereal %}
      {% elsif product.handle contains 'low-carb-keto-friendly-cookies-no-sugar-added-gluten-free-and-grain-free' %}
        {% assign product = all_products['low-carb-keto-friendly-cookies-no-sugar-added-gluten-free-and-grain-free'] %}
