      {% else %}
        {% if product.handle == 'keto-cookie-dough-bar-with-chocolate-chips' %}
          {% assign product = all_products['keto-cookie-dough-bar-with-chocolate-chips'] %}
        {% elsif product.handle
            contains 'new-max-sweets-snacks-low-carb-keto-max-mallow-atkins-paleo-diabetic-diet-friendly-health-snack-gluten-free-soy-free-zero-sugar-snack-non-gmo-ketogenic-6-pack-by-max-sweets'
        %}
          {% assign product = all_products['new-max-sweets-snacks-low-carb-keto-max-mallow-atkins-paleo-diabetic-diet-friendly-health-snack-gluten-free-soy-free-zero-sugar-snack-non-gmo-ketogenic-6-pack-by-max-sweets'] %}
