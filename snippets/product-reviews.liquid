        {% elsif product.handle contains 'variety-pack-pack-of-8-by-prevail-jerky' %}
          {% assign product = product %}
        {% elsif product.handle contains 'keto-krisp-by-keto-krisp' %}
          {% assign product = product %}
        {% elsif product.handle contains 'fall-best-sellers-by-good-dees' %}
          {% assign product = product %}
        {% elsif product.handle contains 'keto-cereal-6-boxes' %}
          {% assign product = product %}
        {% elsif product.handle contains 'sys-10-pieces-of-pb-caramel-crunch-updated-by-keto-krackd' %}
          {% assign product = product %}
        {% elsif product.handle contains 'snack-owl-gummies-â“¥-by-pink-panda' %}
