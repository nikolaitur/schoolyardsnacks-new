        {% assign product = all_products['carro-only-multi-flavor-phat-crackers-5-pack-by-real-phat-foods'] %}
      {% elsif product.handle contains 'lowcarb-high-protein-plant-based-pasta-sys-by-kaizen-food-company' %}
