        {% elsif product.handle contains 'keto-crunchy-chips-by-mr-tortilla-by-mr-tortilla-store' %}
          {% assign product = product %}
        {% elsif product.handle contains 'sys-12-pieces-of-assorted-dark-chocolate-truffle-by-keto-krackd' %}
          {% assign product = product %}
        {% elsif product.handle contains 'sys-20-pieces-of-aloha-caramel-by-keto-krackd' %}
          {% assign product = product %}
        {% elsif product.handle contains 'fusilli-sys-by-kaizen-food-company' %}
          {% assign product = product %}
        {% elsif product.handle contains 'keto-bread-by-kiss-my-keto' %}
          {% assign product = product %}
        {% elsif product.handle contains 'keto-chocolate-peanut-butter-cups-buckeyes-6-pack-by-better-than-good-foods' %}
          {% assign product = product %}
        {% else %}
          {% assign product = all_products['keto-puffs'] %}
