<!-- Subscription product upsell -->
{% if _set.upsell_product3 != blank %}
{% assign upsell_product = all_products[_set.upsell_product3] %}
    <div class="product-pre-upsell cart-upsell-element" id="preCartUpsell3" data-product-variant="" data-product-title="{{ upsell_product.title }}" data-product-handle="{{ upsell_product.handle }}">
    {% if upsell_product %}
        <div class="sub_upsell_add" 
        data-product-id="{{ upsell_product.selected_or_first_available_variant.metafields.subscriptions.discount_variant_id  }}"
        data-product-frequency="{{ upsell_product.metafields.subscriptions.shipping_interval_frequency }}"
        data-product-unit_type="{{ upsell_product.metafields.subscriptions.shipping_interval_unit_type }}"
        >{{ _set.subscription_text }}<span class="spinner"></span>
        <span class="upsell_badge">
            <span class="icon_1"></span>
            <span class="icon_2"></span>
        </span>
    </div>
    {% endif %}
    </div>
{% endif %}

