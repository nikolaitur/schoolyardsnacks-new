{% assign _set = section.settings %}

{% if _set.upsell_product1 != blank %}
{% assign upsell_product = all_products[_set.upsell_product1] %}
    <div class="product-pre-upsell cart-upsell-element hide--item" id="preCartUpsell1" data-product-variant="">
    {% if upsell_product %}
        <div class="onetime_upsell_add" 
        data-product-id="{{ upsell_product.variants[0].id }}"
        >
        <span class="upsell_badge">
            <span class="icon_1"></span>
            <span class="icon_2"></span>
        </span>
        <div class="cart-drawer__item-image">
            <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" class="lazy" data-src="{{ upsell_product.featured_image | img_url: '60x' }}" alt="{{ upsell_product.variant_title }}" />
          </div>
        <p class="upsell_title">{{ upsell_product.title }}<span class="price-wrap"><span class="ik-compare_price">{{ upsell_product.compare_at_price | money }}</span><span class="ik-price">{{ upsell_product.price | money }}</span></span><span class="spinner"></span></p></div>
    {% endif %}
    </div>
{% endif %}

