      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
      },
      {
        "type": "image_picker",
        "id": "feature_highlights",
        "label": "Feature Highlights"
      },
      {
        "type": "checkbox",
        "id": "soldout_1",
        "label": "Bundle #1 Soldout",
