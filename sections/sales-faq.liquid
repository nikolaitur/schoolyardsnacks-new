<div class="faq-sec">
	<div class="enclose">
		<h2>{{ section.settings.heading }}</h2>
		<div class="faq-items">
          {% for block in section.blocks %}
          	<div class="item">
				<h4><span></span>{{ block.settings.faq_head }}</h4>
				<div class="ans">{{ block.settings.faq_text }}</div>
			</div>
          {% endfor %}
		</div>
		<div class="btns"><a href="#" class="buybtn big">{{ settings.sales-btn-text2 }} <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" class="lazy" data-src="{{ 'icon-hand.png' | asset_url }}" alt="image"></a></div>
	</div>
</div>

