<footer id="footer">
	<div class="enclose">
		<div class="inn">
			<div class="copyright">{{ section.settings.copy }}</div>
			<div class="navi"><a href="/policies/privacy-policy">Privacy Policy</a><a href="/policies/terms-of-service">Terms of Service</a></div>
			<div class="powered">{{ section.settings.power }}</div>
		</div>
	</div>
</footer>

<div class="poplayer2"></div>

<div class="popup" id="privacy">
	<a class="popclose">x</a>
	<div class="content">
      <h2>{{ section.settings.privacy_head }}</h2>
  	  {{ section.settings.privacy_content }}
  	</div>
</div>

<div class="popup" id="terms">
	<a class="popclose">x</a>
	<div class="content">
      <h2>{{ section.settings.terms_head }}</h2>
  	  {{ section.settings.terms_content }}
  	</div>
</div>



