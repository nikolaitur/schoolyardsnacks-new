  {
    "name": "Sales footer",
    "settings": [
  {
   	"type": "text",
  	"id":"copy",
	"label":"Copyright"
  },
  {
   	"type": "text",
  	"id":"power",
	"label":"Powered by"
  },
  {
    "type": "text",
    "id":"terms_head",
    "label":"Terms Heading"
    },
    {
    "type": "textarea",
    "id":"terms_content",
    "label":"Terms Content"
    },
	{
    "type": "text",
    "id":"privacy_head",
    "label":"Privacy Heading"
    },
    {
    "type": "textarea",
    "id":"privacy_content",
    "label":"Privacy Content"
    }
]
  }
{% endschema %}

