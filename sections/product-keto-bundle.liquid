	{
		"type": "checkbox",
		"id": "enable_free_gift",
		"label": "Enable Free Gift Promo?",
		"info": "Use this with the promo in the cart drawer settings",
		"default": false
	}
    ],
    "blocks":[
      {
        "type":"bundle",
