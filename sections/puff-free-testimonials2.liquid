<div class="ytlander-4 ytlander-section">
  <div class="container ">
    <h2 class="title">{{ section.settings.title }}</h2>
    <div class="review-images hide--mobile">
      <div class="half-column">
        <img src="{{ section.settings.image1 | img_url: '768x' }}" alt="review image">
        <img src="{{ section.settings.image2 | img_url: '768x' }}" alt="review image">
        <img
          src="{{ section.settings.image3 | img_url: '768x' }}"
          alt="review image"
        >
      </div>
      <div class="half-column">
        <img src="{{ section.settings.image4 | img_url: '768x' }}" alt="review image">
        <img
          src="{{ section.settings.image5 | img_url: '768x' }}"
          alt="review image"
        >
        <img src="{{ section.settings.image6 | img_url: '768x' }}" alt="review image">
        <img src="{{ section.settings.image7 | img_url: '768x' }}" alt="review image">
      </div>
    </div>
    <a href="#" class="btn btn-flavor-select hide--mobile">Choose Your Flavors</a>
    <div class="image-slider2 image-slider social hide--desktop">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <img src="{{ section.settings.image1 | img_url: '768x' }}" alt="review image">
        </div>
        <div class="swiper-slide">
          <img src="{{ section.settings.image2 | img_url: '768x' }}" alt="review image">
        </div>
        <div class="swiper-slide">
          <img src="{{ section.settings.image3 | img_url: '768x' }}" alt="review image">
        </div>
        <div class="swiper-slide">
          <img
            src="{{ section.settings.image4 | img_url: '768x' }}"
            alt="review image"
          >
        </div>
        <div class="swiper-slide">
          <img
            src="{{ section.settings.image5 | img_url: '768x' }}"
            alt="review image"
          >
        </div>
        <div class="swiper-slide">
          <img
            src="{{ section.settings.image6 | img_url: '768x' }}"
            alt="review image"
          >
        </div>
        <div class="swiper-slide">
          <img
            src="{{ section.settings.image7 | img_url: '768x' }}"
            alt="review image"
          >
        </div>
      </div>
      <div class="swiper__button swiper__button--next swiper__button--next2">{% include 'icon', handle: 'next' %}</div>
      <div class="swiper__button swiper__button--prev swiper__button--prev2">{% include 'icon', handle: 'prev' %}</div>
    </div>
    <a href="#" class="btn btn-flavor-select hide--desktop">Choose Your Flavors</a>
  </div>
</div>

<script>
  imageSwiper = new Swiper($('.ytlander-4 .image-slider2'), {
    effect: 'slide',
    loop: true,
    centeredSlides: true,
    slidesPerView: 1,
    spaceBetween: 48,
    autoHeight: true,
    navigation: {
      nextEl: '.swiper__button--next2',
      prevEl: '.swiper__button--prev2',
    },
  });
</script>

{% schema %}
{
  "name": "Puff Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Join Over 300,000 People Already Enjoying The Guilt-free Crunch!"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image4",
      "label": "Image 4"
    },
    {
      "type": "image_picker",
      "id": "image5",
      "label": "Image 5"
    },
    {
      "type": "image_picker",
      "id": "image6",
      "label": "Image 6"
    },
    {
