<script>
  $('.product-option-row--cereal1 .product-option').on('click', function(e){
    e.stopPropagation();
    e.preventDefault();
    $('.product-option-row--cereal1 .product-option').removeClass('product-option--selected');
    $(this).addClass('product-option--selected');
    $('.cereal1-variant-id').val($(this).find('input').val());
    $('.discount-amount').text($(this).find('input').data('discount'));
    if($(this).find('input').data('discount') == '') {
      $('.discount-info').hide();
    } else {
      $('.discount-info').show();
    }
  });
</script>

