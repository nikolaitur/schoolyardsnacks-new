<div class="works-sec" id="benefits">
	<div class="enclose">
		<h2>{{ section.settings.heading }}</h2>
		<div class="work-items">
          {% for block in section.blocks %}
          	<div class="item">
              <div class="figure">
					<img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" class="lazy" data-src="{{ block.settings.fea_img | img_url:'master' }}" alt="image">
				</div>
				<div class="content">
					<h4>{{ block.settings.heading1 }}</h4>
					<p>{{ block.settings.content }}</p>
				</div>
          	</div>
          {% endfor %}
		</div>
		<div class="btns"><a href="#" class="buybtn big">{{ settings.sales-btn-text2 }} <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" class="lazy" data-src="{{ 'icon-hand.png' | asset_url }}" alt="image"></a></div>
	</div>
</div>

